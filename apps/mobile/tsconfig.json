{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/app/*"
      ],
      "@/core/*": [
        "./src/app/core/*"
      ],
      "@/features/*": [
        "./src/app/features/*"
      ],
      "@/shared/*": [
        "./src/app/shared/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}
